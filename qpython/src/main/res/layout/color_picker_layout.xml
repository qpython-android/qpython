<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.larswerkman.holocolorpicker.ColorPicker
        android:id="@+id/picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.larswerkman.holocolorpicker.SVBar
        android:id="@+id/svbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.larswerkman.holocolorpicker.OpacityBar
        android:id="@+id/opacitybar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:text="@string/hex_color_char"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/hexColorValueEditText"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="@string/color_R"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/rgbColorRValueEditText"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="@string/color_G"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/rgbColorGValueEditText"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="@string/color_B"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/rgbColorBValueEditText"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>